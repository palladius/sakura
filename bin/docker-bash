#!/bin/bash

# Use the command docker exec -it <container name> /bin/bash to get a bash shell in the container
CONTAINTER_ID="${1:nothing}"
COMMAND="${2:-/bin/bash}"

if [ $# -ne 1 ]; then
    echo "illegal number of parameters. I need onw for the CONTAINTER_ID. You can find it here"
    docker ps
else
    echodo docker exec -it "$1" "$COMMAND"
    # or...
    #shift
    #echodo docker exec -it "$1" "$@"
fi
