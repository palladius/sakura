if test $# = 0
then
  read a
else
  a=$1
fi

echo -n $a | od -w1 -t u1 -An -v | while read i
do
  if test -z "${icao[$i]}"
  then
    echo "carattere numero $i"
  else
    echo ${icao[$i]}
  fi
done
